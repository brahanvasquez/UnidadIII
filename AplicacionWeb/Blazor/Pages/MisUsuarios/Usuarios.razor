@page "/Usuarios"
@using Modelos

<AuthorizeView Roles="Administrador">
    <Authorized Context="AuthenticationState">
        <h2>Lista de Usuarios</h2>

        @if(lista==null)
        {
            <p>No existen usuarios en el sistema</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Codigo</th>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Rol</th>
                        <th>Esta Activo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(Usuario user in lista)
                    {
                        @if (user.Rol=="Administrador")
                        {
                            <tr style="background-color:beige">
                                <td>@user.Codigo</td>
                                <td>@user.Nombre</td>
                                <td>@user.Correo</td>
                                <td>@user.Rol</td>
                                @if (user.EstaActivo)
                                {
                                    <td>
                                        <span class="oi oi-circle-check" style="color:green;"></span>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <span class="oi oi-circle-check" style="color:red;"></span>
                                    </td>
                                }

                            </tr>
                        }
                        else{
                            <tr>
                                <td>@user.Codigo</td>
                                <td>@user.Nombre</td>
                                <td>@user.Correo</td>
                                <td>@user.Rol</td>
                                @if (user.EstaActivo)
                                {
                                    <td>
                                        <span class="oi oi-circle-check" style="color:green;"></span>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <span class="oi oi-circle-check" style="color:red;"></span>
                                    </td>
                                }

                            </tr>
                        }
                        
                    }
                </tbody>
            </table>
        }
    </Authorized>
</AuthorizeView>

